@model AtelieDrinks.Models.Insumos

@{
    ViewData["Title"] = "Create";
}

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="/css/orcamento.css">

    <title>Orcamento 3</title>
</head>

<body>
    <!--hero-banner-->
    <div class="hero-banner">
        <h1 class="title-banner">Adicionar Insumo</h1>
    </div>

    <!--content-->
    <div class="black-box">
        <div class="content">
            <!--box-->
            <div class="content-box">
                <div class="margin-box" style="margin: 180px 0 50px 0;">
                    <h3>Preencha os Campos</h3>
                    <p style="margin-top:5px">Nome do insumo,quantidade,Custo do Insumo...</p>
                 <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row-inputs">
                            <div class="list-inputs">
                                <!--Lista Nome do insumo-->
                                <div class="form-input" style="width:470px">
                                    <!--Input Nome do Insumo-->
                                    <input asp-for="nome_insumo" />
                                    <label><span>Nome</span></label>
                                    <span asp-validation-for="nome_insumo" class="text-danger"></span>
                                </div>
                            </div> <!--Fim lista Nome do insumo-->


                            <div class="list-inputs">
                                <!--Lista Quantidade-->
                                <div class="form-input" style="width:470px">
                                    <!--Input QTD-->
                                    <input asp-for="quantidade">
                                    <label><span>QTD</span></label>
                                    <span asp-validation-for="quantidade" class="text-danger"></span>
                                </div>
                            </div> <!--Fim lista Quantidade-->


                            <div class="list-inputs">
                                <!--Lista Nome do insumo-->
                                <div class="form-input" style="width:470px">
                                    <!--Input Nome do Insumo-->
                                    <input asp-for="custo_insumo" />
                                    <label><span>Custo do Insumo</span></label>
                                    
                                    <span asp-validation-for="custo_insumo" class="text-danger"></span>
                                </div>
                            </div> <!--Fim lista Nome do insumo-->


                        </div> <!--Fim row-inputs-->
                        <div class="list-buttonsinsu">

                            <button class="button excluir" onclick="window.location='@Url.Action("Index")'">Voltar</button>
                            <button type="submit" class="button continuar" type="submit">Continuar</button>
                        </div> <!--fim lista-buttons-->
                    </form>
                   
                </div> <!--Fim margin-box-->

            </div> <!--fim content box-->
         
               
         
        </div>
    </div>
</body>

<style>
    .list-buttonsinsu{
     padding-top:20px;
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


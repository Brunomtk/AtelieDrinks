@model AtelieDrinks.Models.Insumos

@{
    ViewData["Title"] = "Edit";
}

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="/css/orcamento.css">

    <title>Editar</title>
</head>

<body>
    <!--hero-banner-->
    <div class="hero-banner">
        <h1 class="title-banner">EDITAR INSUMOS</h1>
    </div>

    <!--content-->
    <div class="black-box">
        <div class="content">
            <!--box-->
            <div class="content-box">
                <div class="margin-box" style="margin: 50px 0 50px 0;">
                    <h3>Editar Insumos</h3>
                    <p style="margin-top:5px">Nome, Quantidade, Custo...</p>
                 <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="IdInsumo" />
                        <div class="row-inputs">
                            <div class="list-inputs">
                                <!--Lista Nome do insumo-->
                                <div class="form-input" style="width:470px">
                                <!--Input NOME-->
                                    <input asp-for="NomeInsumo" type="value" required="">
                                    <label><span asp-validation-for="NomeInsumo">Nome</span></label>
                                </div>
                            </div> <!--Fim lista Nome do insumo-->

                            
                            <div class="list-inputs">
                                <!--Lista Quantidade-->
                                <div class="form-input" style="width:470px">
                                <!--Input QUANTIDADE-->
                                    <input asp-for="QuantidadeInsumo" type="value" required="">
                                    <label><span asp-validation-for="QuantidadeInsumo">Quantidade</span></label>
                                </div>
                            </div> <!--Fim lista Quantidade-->


                            <div class="list-inputs">
                                <!--Lista Nome do insumo-->
                                <div class="form-input" style="width:470px">
                                    <!--Input Nome do Insumo-->
                                    <input asp-for="ValorInsumo" type="value" required="">
                                    <label><span asp-validation-for="ValorInsumo">Custo</span></label>
                                </div>
                            </div> <!--Fim lista Nome do insumo-->


                        </div> <!--Fim row-inputs-->
                        <div class="list-buttonsinsu">

                            <button class="button excluir" onclick="window.location='@Url.Action("Index")'">Voltar</button>
                            <button type="submit" class="button continuar" type="submit" >Editar</button>
                        </div> <!--fim lista-buttons-->
                    </form>
                   
                </div> <!--Fim margin-box-->

            </div> <!--fim content box-->
         
              
         
        </div>
    </div>
</body>

<style>
    .list-buttonsinsu{
     padding-top:20px;
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
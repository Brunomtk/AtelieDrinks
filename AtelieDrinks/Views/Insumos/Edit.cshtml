@model AtelieDrinks.Models.Insumos

@{
    ViewData["Title"] = "Edit";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="/css/orcamento.css">

    <style>
        .scrollable-content {
            max-height: 700px;
            overflow-y: auto;
        }

        .modal-content-dark {
            background-color: #4c000b;
            color: #ffffff;
        }

        .modal-header-dark {
            background-color: #4c000b;
            color: #ffffff;
            border-bottom: none;
        }

        .modal-title-dark {
            color: #ffffff;
        }

        .modal-body-dark {
            background-color: #4c000b;
            color: #ffffff;
        }

        .modal-footer-dark {
            background-color: #4c000b;
            color: #ffffff;
            border-top: none;
        }


        .btn-primary:hover {
            background-color: #a8001f;
            border-color: #a8001f;
        }

        .btn-secondary {
            background-color: #2f2f2f;
            border-color: #2f2f2f;
        }

            .btn-secondary:hover {
                background-color: #4f4f4f;
                border-color: #4f4f4f;
            }
    </style>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.maskedinput/1.4.1/jquery.maskedinput.min.js"></script>

    <title>Insumos_Editar</title>
</head>
<body>
    <div class="hero-banner">
        <h1 class="title-banner">Insumos</h1>
        <h3>Editar Insumo</h3>
    </div>

    <div class="black-box">
        <div class="content">
            <form asp-action="Edit">
                <div class="content-box">
                    <div style="margin: 160px 0 140px 0;" class="margin-box">
                        <h3>Informações do Insumo</h3>
                        <p style="margin-top:5px"></p>
                        <div>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="IdInsumo" />
                            <div class="form-group">
                                <label asp-for="NomeInsumo" class="control-label"></label>
                                <input asp-for="NomeInsumo" class="form-control input-nome" value="@Model.NomeInsumo" />
                                <span asp-validation-for="NomeInsumo" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="QuantidadeInsumo" class="control-label"></label>
                                <input asp-for="QuantidadeInsumo" class="form-control input-quantidade" value="@Model.QuantidadeInsumo" />
                                <span asp-validation-for="QuantidadeInsumo" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ValorInsumo" class="control-label"></label>
                                <input asp-for="ValorInsumo" class="form-control input-valor" value="@Model.ValorInsumo" />
                                <span asp-validation-for="ValorInsumo" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="list-buttons" style="justify-content:center">
                    <a href="@Url.Action("Index", "Insumos")" class="button excluir">Voltar</a>
                    <button class="button continuar btn btn-primary" type="submit">Editar</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
